<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
  <link rel="stylesheet" href="/stylesheets/form.css">
</head>

<body>

  <% include ../partials/nav.ejs %>

  <!-- CONTENT -->
  <div class="container-fluid">

    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        
        <!-- DISPLAYS -->
        <% include ../partials/displays.ejs %>

        <!-- MAIN -->
        <div class="row">
          <div class="content-box">

            <form action="/login" method="post">
              <div class="row">
                <h1>Login</h1>
              </div>
              <div class="row">
                <label>Email</label>
              </div>
              <div class="row">
                <input type="text" name="em" placeholder="Enter Email" required>
              </div>
              <div class="row">
                <label>Password</label>
              </div>
              <div class="row">
                <input type="password" name="pw" placeholder="Enter Password" required>
              </div>
              <div class="row">
                <button type="submit">Login</button>
              </div>
            </form>

          </div>
        </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</body>
</html>
