<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
  <link rel="stylesheet" href="/stylesheets/form.css">
</head>

<body>

  <% include ../partials/nav.ejs %>

  <!-- CONTAINER 1 -->
  <div class="container-solo">
    <h3 class="section-title">Register</h3>

    <form action="/register" method="post">
      <div class="row">
        <label class="control-label"><b>First Name</b></label>
        <input type="text" name="fn" placeholder="Enter Your First Name" required>    
      </div>

      <div class="row">
        <label class="control-label"><b>Last Name</b></label>
        <input type="text" name="ln" placeholder="Enter Your Last Name" required>
      </div>

      <div class="row">
        <label class="control-label"><b>X-Number</b></label>
        <input type="text" name="xn" placeholder="Enter Your X-Number" required>
      </div>

      <div class="row">
        <label class="control-label"><b>Email</b></label>
        <input type="text" name="em" placeholder="Enter Your Email" required>
      </div>
      
      <div class="row">
        <label class="control-label"><b>Password</b></label>
        <input type="password" name="pw" placeholder="Enter A Password" required>
      </div>
      
      <div class="row">
        <label class="control-label"><b>Repeat Password</b></label>
        <input type="password" name="pw-repeat" placeholder="Repeat Password" required>
      </div>
      
      <button type="submit" class="registerbtn">Register</button>
    </form>
  </div>

</body>
</html>
