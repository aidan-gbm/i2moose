<!doctype html>
<html lang="en">
<head>
  <% include ../partials/header.ejs %>
  <link rel="stylesheet" href="/stylesheets/home.css">
  <title>Home</title>
</head>

<body onload="setPost('home',0);setPost('history',0)">

  <% include ../partials/nav.ejs %>

  <!-- CONTENT -->
  <div class="container-fluid">

    <!-- DISPLAYS -->
    <% include ../partials/displays.ejs %>

    <!-- IOTD -->
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <img class="iotd" src="/images/mooselandia.png" alt="Mooselandia">
      </div>
      <div class="col-md-3"></div>
    </div>
    
    <!-- MAIN -->
    <div class="row">
      <div class="content-box">
        <div class="row">
            <h1>Welcome to I-2</h1>
            <p class="motd"></p>
          </div>
    
          <div class="row">
          <% include ../partials/setPost.ejs %>

            <!-- HOME POSTS -->
            <div class="col-md-6">
              <div class="sub-content-box">
                <noscript>
                  <style type="text/css">
                    .scripted {display:none;}
                  </style>
                  <div class="row">
                    <h2>You Don't Have JavaScript Enabled</h2>
                  </div>
                  <div class="row">
                    <p>This probably means you're using Internet Explorer. Please do yourself a favor and get Google Chrome or Firefox, then you'll get a lot more cool stuff from this site.</p>
                  </div>
                </noscript>

                <div class="scripted">
                  <div class="row">
                    <h2 class="post-title" id="post-title-home"></h2>
                  </div>
                  <div class="row">
                    <p class="post-info" id="post-info-home"></p>
                  </div>
                  <div class="row">
                    <div class="post-text" id="post-text-home"></div>
                  </div>
                  <div class="row">
                    <button id="prev-home" class="prev" onclick="previous('home')" hidden>< Newer</button>
                    <button id="next-home" class="next" onclick="next('home')" hidden>Older ></button>
                  </div>
                </div>
              </div>
            </div>
    
            <!-- HISTORY POSTS -->
            <div class="col-md-6">
              <div class="sub-content-box">
                <noscript>
                  <div class="row">
                    <h2>You Don't Have JavaScript Enabled</h2>
                  </div>
                  <div class="row">
                    <p>This probably means you're using Internet Explorer. Please do yourself a favor and get Google Chrome or Firefox, then you'll get a lot more cool stuff from this site.</p>
                  </div>
                </noscript>

                <div class="scripted">
                  <div class="row">
                    <h2 class="post-title" id="post-title-history"></h2>
                  </div>
                  <div class="row">
                    <p class="post-info" id="post-info-history"></p>
                  </div>
                  <div class="row">
                    <div class="post-text" id="post-text-history"></div>
                  </div>
                  <div class="row">
                    <button id="prev-history" class="prev" onclick="previous('history')" hidden>< Newer</button>
                    <button id="next-history" class="next" onclick="next('history')" hidden>Older ></button>
                  </div>
                </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</body>
</html>
