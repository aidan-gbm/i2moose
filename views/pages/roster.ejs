<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
  <link rel="stylesheet" href="/stylesheets/roster.css">
</head>

<body>

  <% include ../partials/nav.ejs %>

  <!-- CONTENT -->
  <div class="container-fluid">

    <!-- DISPLAYS -->
    <% include ../partials/displays.ejs %>

    <!-- MAIN -->
    <div class="row">
      <div class="content-box">
        <div class="row">
          <h1>Company Roster</h1>
        </div>

        <div class="row" style="visibility: hidden; height:0px;">
          <div class="search-options">
            <label for="sortbox">Sort by:</label>
            <select name="sortbox" id="sortbox"></select>
            <input type="search" name="searchbox" id="searchbox" placeholder="Search...">
            <button type="submit">Search</button>
          </div>
        </div>

        <div class="row">
          <table>
          <% if (data.rows) { %>
            <tr>
            <% Object.keys(data.rows[0]).forEach(function(key) { %>
              <th><%= key %></th>
            <% }) %>
            </tr>

            <% data.rows.forEach(function(cdt) { %>
            <tr>
              <% Object.keys(cdt).forEach(function(key) { %>
              <td><%= cdt[key] %></td>
              <% }) %>
            </tr>
            <% }) %>
          <% } %>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
